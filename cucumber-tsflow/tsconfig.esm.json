{
  "compilerOptions": {
    "composite": true,
    "module": "es2022",
    "moduleResolution": "node16",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "outDir": "./dist/esm",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"]
}
